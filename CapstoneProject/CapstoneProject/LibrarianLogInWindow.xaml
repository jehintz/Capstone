<Window x:Name="logInWindow" x:Class="CapstoneProject.LibrarianLogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Librarian Log In" Height="231" Width="300" ResizeMode="NoResize">
    <Grid>
        <Label Content="User ID" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <TextBox x:Name="userIDTextBox" Height="23" Margin="10,35,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <PasswordBox x:Name="passwordTextBox" Margin="10,95,10,0" VerticalAlignment="Top" Height="23"/>
        <Label x:Name="errorLabel" Content="" Margin="10,123,10,47" Padding="0,0,5,5" Visibility="Visible" Foreground="Red"/>
        <Button x:Name="logInButton" Content="Log In" Margin="0,0,95,23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" RenderTransformOrigin="0.025,0.474" Click="logInButton_Click" IsDefault="True"/>
        <Button x:Name="cancelButton" Content="Cancel" Margin="0,0,10,23" Click="cancelButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80"/>

    </Grid>
</Window>
